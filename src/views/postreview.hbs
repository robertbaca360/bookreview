<!-- ELEMENTS -->
<link rel="stylesheet" href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css">

<h2 class="page-title">Review Page</h2>

  
<div class="book-section row clearfix">
  <div class="image-div col-lg-2">
    <img src="{{result.thumbnail}}" /><br>
    <p>{{result.title}}</p>
    <p>{{result.authors}}</p>
  </div>

  <div class="container col-lg-10 review-div">
    <div class="row">
      <div >
        <div class="widget-area no-padding blank">
          <div class="status-upload">
            <form method="post" action="/postreview" class="review-section">
              <input type="text" name="titletext" placeholder="Title your review..." maxlength="100">
              <textarea type="text" placeholder="What do you think of this book?" name="reviewtext" maxlength="700"></textarea>
              <input type="hidden" name="book" value="{{result.title}}">
              <input type="hidden" name="authors" value="{{result.authors}}">
              <input type="hidden" name="image" value="{{result.thumbnail}}">
              <button type="submit" class="btn btn-success green"><i class="fa fa-share"></i>Publish Review</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
